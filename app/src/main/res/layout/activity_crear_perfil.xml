<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF">

    <ImageButton
        android:id="@+id/btn_atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_atras"
        android:background="@null"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/text_crear_perfil"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="CREAR PERFIL"
        android:textSize="20sp"
        android:typeface="normal"
        android:visibility="visible"
        />

    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/text_crear_perfil"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">


    <TextView
        android:id="@+id/nameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_crear_perfil"
            android:gravity="center"
            android:text="ELIGE UN NOMBRE"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="192dp"
        android:layout_height="38dp"
        android:layout_below="@id/nameLabel"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/texto_redondeado"
        android:elevation="15dp"
        android:gravity="center"
        android:hint="Nombre..."
        android:inputType="text" />

    <TextView
            android:id="@+id/iconLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameEditText"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="ELIGE UN ÍCONO"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ly_perfiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/iconLabel"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/perfil1"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_user1"
                android:text="@null" />

            <ImageView
                android:id="@+id/perfil2"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user2"
                android:text="@null" />

            <ImageView
                android:id="@+id/perfil3"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user3"
                android:text="@null" />

            <ImageView
                android:id="@+id/perfil4"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user4"
                android:text="@null" />

            <ImageView
                android:id="@+id/perfil5"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_user5"
                android:text="@null" />
        </LinearLayout>

    <TextView
        android:id="@+id/colorLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ly_perfiles"
        android:gravity="center"
        android:text="ELIGE UN COLOR"
        android:textStyle="bold" />

